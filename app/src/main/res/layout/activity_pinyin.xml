<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PinyinActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_title0"
                android:text="六十四卦，按周易古经顺序排列"
                android:textColor="@color/design_default_color_secondary_variant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_info_shunxu"
                android:text=""
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="@dimen/split_margin"
                android:layout_marginTop="@dimen/split_margin"
                android:background="@color/design_default_color_secondary_variant"/>

            <ImageView
                android:id="@+id/iv_fengong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/fengong2"/>
            <TextView
                android:id="@+id/tv_title1"
                android:text="分宫卦象次序歌"
                android:textColor="@color/design_default_color_secondary_variant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_info_fengong"
                android:text=""
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="@dimen/split_margin"
                android:layout_marginTop="@dimen/split_margin"
                android:background="@color/design_default_color_secondary_variant"/>

            <TextView
                android:id="@+id/tv_title2"
                android:text="分宫卦象次序歌"
                android:textColor="@color/design_default_color_secondary_variant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_info_guaming"
                android:text=""
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="@dimen/split_margin"
                android:layout_marginTop="@dimen/split_margin"
                android:background="@color/design_default_color_secondary_variant"/>

            <TextView
                android:id="@+id/tv_title3"
                android:text="上下经卦变歌"
                android:textColor="@color/design_default_color_secondary_variant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_info_guabian"
                android:text=""
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="@dimen/split_margin"
                android:layout_marginTop="@dimen/split_margin"
                android:background="@color/design_default_color_secondary_variant"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/bagua"
                />
            <TextView
                android:id="@+id/tv_title4"
                android:text="八卦歌诀"
                android:textColor="@color/design_default_color_secondary_variant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_info_bagua_gejue"
                android:text=""
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="@dimen/split_margin"
                android:layout_marginTop="@dimen/split_margin"
                android:background="@color/design_default_color_secondary_variant"/>

            <TextView
                android:id="@+id/tv_title5"
                android:text="八卦详解"
                android:textColor="@color/design_default_color_secondary_variant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_info_bagua_xiangjie"
                android:text=""
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="@dimen/split_margin"
                android:layout_marginTop="@dimen/split_margin"
                android:background="@color/design_default_color_secondary_variant"/>
            <TextView
                android:id="@+id/tv_title6"
                android:text="本卦、互卦、变卦、错卦、综卦等术语"
                android:textColor="@color/design_default_color_secondary_variant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_info_shuyu_cuogua"
                android:text=""
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="@dimen/split_margin"
                android:layout_marginTop="@dimen/split_margin"
                android:background="@color/design_default_color_secondary_variant"/>
        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>